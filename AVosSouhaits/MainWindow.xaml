<Window x:Class="AVosSouhaits.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A Vos Souhaits - Projets" Background="#F5F5F5" Width="700">


    <DockPanel>
        <Grid>
            <Rectangle Fill="#FF9FC0C8" Height="70" VerticalAlignment="Top"/>
            <Button x:Name="bntProjets" Content="Projets" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="135" Height="51" Background="{x:Null}" BorderBrush="White" Foreground="White" FontSize="36" FontFamily="Coquette Regular" BorderThickness="0" Click="bntProjets_Click"/>
            <Button x:Name="bntProjets_Copy" Content="Administration" HorizontalAlignment="Left" Margin="185,10,0,0" VerticalAlignment="Top" Width="264" Height="51" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontSize="36" FontFamily="Coquette Regular" BorderThickness="0" Click="bntProjets_Copy_Click"/>
            <Frame x:Name="_mainFrame" Margin="0,70,0,-14"  NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>